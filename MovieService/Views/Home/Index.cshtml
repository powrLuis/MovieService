@section scripts {
    @Scripts.Render("~/bundles/App")
}

<div class="page-header">
    <h1>Servicio de Peliculas</h1>
</div>

<div class="row">

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Peliculas</h2>
            </div>
            <div class="panel-body">
                <ul class="list-unstyled" data-bind="foreach:movies">
                    <li>
                        <strong><span data-bind="text:Title"></span></strong>: <span data-bind="text:Price"></span>
                        <small><a href="#" data-bind="click: $parent.getMovieDetail">Detalles</a></small>
                    </li>
                </ul>
            </div>
        </div>
        <div class="alert alert-danger" data-bind="visible: error"><p data-bind="text: error"></p></div>
    </div>

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detalle</h2>
            </div>
            <table class="table">
                <tr><td>Titulo</td><td data-bind="text: detail().Title"></td></tr>
                <tr><td>Año</td><td data-bind="text: detail().Year"></td></tr>
                <tr><td>Precio</td><td data-bind="text: detail().Price"></td></tr>
                <tr><td>Estado</td><td data-bind="text: detail().Status"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Agregar pelicula</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addMovie">
                    <div class="form-group" data-bind="with: newBook">
                        <label for="inputTitle" class="col-sm-2 control-label">Titulo</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputTitle" data-bind="value:Titulo" />
                        </div>

                        <label for="inputYear" class="col-sm-2 control-label">Año</label>
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputYear" data-bind="value:Año" />
                        </div>

                        <label for="inputPrice" class="col-sm-2 control-label">Precio</label>
                        <div class="col-sm-10">
                            <input type="number" step="any" class="form-control" id="inputPrice" data-bind="value:Precio" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>